<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rowCount="5"
        app:columnCount="2"
        android:gravity="center">

        <Button
            android:id="@+id/btnLightOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light on"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btnLightOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light Off"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btnRadiatorOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radiator On"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btnRadiatorOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radiator Off"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btnOpenBlinds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Blinds"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btnCloseBlinds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Blinds"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btnTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1"/>
        <Button
            android:id="@+id/btnHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for action"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="1"
            app:layout_columnSpan="2"
            android:gravity="center"/>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>